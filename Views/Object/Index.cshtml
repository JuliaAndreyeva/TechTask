
@{
    ViewData["Title"] = "Import File";
}

<h2>@ViewData["Title"]</h2>


<form method="post" enctype="multipart/form-data" action="@Url.Action("Convert", "Object")">
    <div class="form-group">
        <label for="fileInput">Select File (txt or json):</label>
        <input type="file" class="form-control-file" id="fileInput" name="importFile">
    </div>

    <div class="form-group">
        <label for="filePath">File Path for saving converted txt to json:</label>
        <input type="text" class="form-control" id="filePath" name="filePath" placeholder="Enter file path">
    </div>

    <button type="submit" class="btn btn-primary">Convert</button>
</form>
